<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#FFFFFF"
    android:layout_gravity = "center_vertical">
    <ImageView
        android:id="@+id/imageview_home_tools_more"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:background="@mipmap/main_home_tools_more_horizontal" />
    <ImageView
        android:id="@+id/imageview_home_tools_bookmark"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/imageview_home_tools_more"
        android:layout_marginRight="60dp"
        android:background="@mipmap/main_home_tools_bookmark"/>
    <ImageView
        android:id="@+id/imageview_home_tools_picture"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="24dp"
        android:layout_centerVertical="true"
        android:background="@mipmap/main_home_tools_icon" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_toRightOf="@+id/imageview_home_tools_picture"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/textview_home_tools_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_alignParentTop="true"
            android:textColor="#878787"
            android:text="Allan lshac"/>
        <TextView
            android:id="@+id/textview_home_tools_time"
            android:layout_width="wrap_content"
            android:layout_alignLeft="@+id/textview_home_tools_location"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#878787"
            android:text="7 December"/>
        <TextView
            android:id="@+id/textview_home_tools_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#878787"
            android:layout_toRightOf="@+id/textview_home_tools_time"
            android:layout_alignTop="@+id/textview_home_tools_time"
            android:layout_marginLeft="10dp"
            android:text="3 min read"/>
    </RelativeLayout>

</RelativeLayout>